<UserControl x:Class="TelegramChannelDownloader.Desktop.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:behaviors="clr-namespace:TelegramChannelDownloader.Desktop.Behaviors"
             xmlns:converters="clr-namespace:TelegramChannelDownloader.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    
    <UserControl.Resources>
        <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Application Log" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center" />
                
                <Button Grid.Column="1"
                        Command="{Binding ClearLogCommand}"
                        Content="Clear Log"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="Bold" />
            </Grid>
        </Border>
        
        <!-- Log Content -->
        <ScrollViewer Grid.Row="1" 
                      behaviors:AutoScrollBehavior.AutoScroll="True"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="Black">
            <ItemsControl ItemsSource="{Binding LogEntries}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"
                                Margin="1"
                                Padding="5,2">
                            <TextBlock Text="{Binding FormattedMessage}" 
                                       FontFamily="Consolas, Courier New, Monospace"
                                       FontSize="12"
                                       Foreground="Black"
                                       TextWrapping="Wrap" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding LogEntries.Count, StringFormat='Total log entries: {0}'}" 
                           VerticalAlignment="Center"
                           Foreground="#7F8C8D" />
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding Source=x:Static SystemParameters.MaximumWindowHeight, StringFormat='Ready'}"
                           VerticalAlignment="Center"
                           Foreground="#27AE60" />
            </Grid>
        </Border>
        
    </Grid>
</UserControl>