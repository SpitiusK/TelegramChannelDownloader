<UserControl x:Class="TelegramChannelDownloader.Desktop.Views.DownloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:TelegramChannelDownloader.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="500">
    
    <UserControl.Resources>
        <converters:ValidationToBorderBrushConverter x:Key="ValidationToBorderBrushConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:ProgressToColorConverter x:Key="ProgressToColorConverter" />
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
        <converters:DoubleToSpeedStringConverter x:Key="DoubleToSpeedStringConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#27AE60" Padding="15">
            <TextBlock Text="Channel Download" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center" />
        </Border>
        
        <!-- Download Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Channel Input Section -->
                <GroupBox Header="Channel Information" FontWeight="Bold">
                    <StackPanel Margin="10">
                        
                        <!-- Channel URL -->
                        <StackPanel>
                            <TextBlock Text="Channel URL or Username:" FontWeight="Medium" Foreground="#2C3E50" />
                            <TextBox Text="{Binding ChannelUrl, UpdateSourceTrigger=PropertyChanged}" 
                                     BorderBrush="{Binding IsChannelUrlValid, Converter={StaticResource ValidationToBorderBrushConverter}}"
                                     BorderThickness="2"
                                     Padding="8,5"
                                     IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                            <TextBlock Text="{Binding ChannelUrlValidationMessage}" 
                                       Foreground="Red" 
                                       FontSize="11"
                                       Visibility="{Binding ChannelUrlValidationMessage, Converter={StaticResource StringToVisibilityConverter}}" />
                        </StackPanel>
                        
                        <!-- Channel Validation Status -->
                        <Border Background="#ECF0F1" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10"
                                Visibility="{Binding ChannelValidationMessage, Converter={StaticResource StringToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⏳" 
                                               FontSize="14" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"
                                               Visibility="{Binding IsValidatingChannel, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <TextBlock Text="✅" 
                                               FontSize="14" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,8,0"
                                               Visibility="{Binding HasValidChannel, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ChannelValidationMessage}" 
                                               FontWeight="Medium" 
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                
                                <!-- Channel Summary -->
                                <TextBlock Text="{Binding ChannelSummary}" 
                                           TextWrapping="Wrap"
                                           FontStyle="Italic"
                                           Foreground="#7F8C8D"
                                           Margin="0,5,0,0"
                                           Visibility="{Binding ChannelSummary, Converter={StaticResource StringToVisibilityConverter}}" />
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </GroupBox>
                
                <!-- Output Settings Section -->
                <GroupBox Header="Output Settings" Margin="0,15,0,0" FontWeight="Bold">
                    <StackPanel Margin="10">
                        
                        <!-- Output Directory -->
                        <StackPanel>
                            <TextBlock Text="Output Directory:" FontWeight="Medium" Foreground="#2C3E50" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                         BorderBrush="{Binding IsOutputDirectoryValid, Converter={StaticResource ValidationToBorderBrushConverter}}"
                                         BorderThickness="2"
                                         Padding="8,5"
                                         IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                <Button Grid.Column="1"
                                        Command="{Binding BrowseDirectoryCommand}"
                                        Content="Browse..."
                                        Padding="15,5"
                                        Margin="5,0,0,0"
                                        IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                            </Grid>
                            <TextBlock Text="{Binding OutputDirectoryValidationMessage}" 
                                       Foreground="Red" 
                                       FontSize="11"
                                       Visibility="{Binding OutputDirectoryValidationMessage, Converter={StaticResource StringToVisibilityConverter}}" />
                        </StackPanel>
                        
                        <!-- Export Format -->
                        <StackPanel>
                            <TextBlock Text="Export Format:" FontWeight="Medium" Foreground="#2C3E50" />
                            <ComboBox ItemsSource="{Binding AvailableExportFormats}"
                                      SelectedItem="{Binding ExportFormat}"
                                      Padding="8,5"
                                      IsEnabled="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                        </StackPanel>
                        
                    </StackPanel>
                </GroupBox>
                
                <!-- Download Controls Section -->
                <GroupBox Header="Download Controls" Margin="0,15,0,0" FontWeight="Bold">
                    <StackPanel Margin="10">
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Start Download Button -->
                            <Button Grid.Column="0"
                                    Command="{Binding StartDownloadCommand}"
                                    Content="Start Download"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Padding="20,12"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Visibility="{Binding IsDownloading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDC3C7" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- Cancel Download Button -->
                            <Button Grid.Column="0"
                                    Command="{Binding CancelDownloadCommand}"
                                    Content="Cancel Download"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    Padding="20,12"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            
                            <!-- Open Output Directory Button -->
                            <Button Grid.Column="1"
                                    Command="{Binding OpenOutputDirectoryCommand}"
                                    Content="📁"
                                    Padding="15,12"
                                    FontSize="16"
                                    Margin="10,0,0,0"
                                    ToolTip="Open Output Directory" />
                        </Grid>
                        
                    </StackPanel>
                </GroupBox>
                
                <!-- Progress Section -->
                <GroupBox Header="Download Progress" Margin="0,15,0,0" 
                          FontWeight="Bold"
                          Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="10">
                        
                        <!-- Progress Bar -->
                        <ProgressBar Value="{Binding DownloadProgress}" 
                                     Minimum="0" 
                                     Maximum="100" 
                                     Height="25" 
                                     Background="#ECF0F1"
                                     Foreground="{Binding DownloadProgress, Converter={StaticResource ProgressToColorConverter}}" />
                        
                        <!-- Progress Text -->
                        <TextBlock Text="{Binding ProgressText}" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2C3E50" />
                        
                        <!-- Progress Details Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <!-- Speed -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Speed:" 
                                       FontWeight="Medium"
                                       Foreground="#2C3E50" />
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding DownloadSpeed, Converter={StaticResource DoubleToSpeedStringConverter}}" 
                                       HorizontalAlignment="Right"
                                       Foreground="#2C3E50" />
                            
                            <!-- Time Remaining -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Time Remaining:" 
                                       FontWeight="Medium"
                                       Foreground="#2C3E50" />
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding EstimatedTimeRemaining, Converter={StaticResource TimeSpanToStringConverter}}" 
                                       HorizontalAlignment="Right"
                                       Foreground="#2C3E50" />
                            
                            <!-- Current Phase -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Phase:" 
                                       FontWeight="Medium"
                                       Foreground="#2C3E50" />
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding DownloadPhase}" 
                                       HorizontalAlignment="Right"
                                       Foreground="#2C3E50" />
                            
                        </Grid>
                        
                        <!-- Current Message Preview -->
                        <Border Background="#F8F9FA" 
                                BorderBrush="#DEE2E6" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10"
                                Visibility="{Binding CurrentMessage, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Current Message:" 
                                           FontWeight="Bold" 
                                           FontSize="12" 
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5" />
                                <TextBlock Text="{Binding CurrentMessage.Text}" 
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="50"
                                           TextWrapping="Wrap"
                                           FontSize="11"
                                           Foreground="#6C757D" />
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </GroupBox>
                
                <!-- Completion Notification -->
                <Border Background="#D4EDDA" Margin="0,15,0,0" 
                        BorderBrush="#C3E6CB" 
                        BorderThickness="2" 
                        CornerRadius="5" 
                        Padding="15"
                        Visibility="{Binding ShowCompletionNotification, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="✅" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0" />
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding CompletionMessage}" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Foreground="#155724"
                                   TextWrapping="Wrap" />
                        
                        <Button Grid.Column="2" 
                                Command="{Binding DismissNotificationCommand}"
                                Content="✕"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Padding="5"
                                VerticalAlignment="Top"
                                ToolTip="Dismiss" />
                    </Grid>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</UserControl>