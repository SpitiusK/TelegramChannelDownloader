{
  "ConnectionStrings": {
    "TelegramDatabase": "Host=localhost;Database=telegram_downloads;Username=telegram_user;Password=secure_password_123;Maximum Pool Size=20;Connection Idle Lifetime=300;Connection Pruning Interval=10"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "TelegramDownloader": {
    "Database": {
      "CommandTimeoutSeconds": 300,
      "MaxRetryCount": 3,
      "MaxRetryDelaySeconds": 30,
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false,
      "UseDbContextPooling": true,
      "DbContextPoolSize": 20,
      "BulkInsertBatchSize": 1000,
      "EnableStreaming": true,
      "BulkOperationTimeoutSeconds": 600
    },
    "DataLifecycle": {
      "Enabled": true,
      "CleanupIntervalHours": 24,
      "DataRetentionDays": 30,
      "LogDatabaseStatistics": true
    }
  }
}